<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/black"
        app:cardPreventCornerOverlap="false"
        app:strokeWidth="3dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correto"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/cor_correto" />

                <TextView
                    android:id="@+id/pontosC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/cor_correto" />

            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Errado"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/cor_errada" />

                <TextView
                    android:id="@+id/pontosE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textAllCaps="true"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/cor_errada" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNv"
            style="@style/Widget.App.Button.Fill"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:textSize="20sp"
            android:text="Niveis" />

        <Button
            android:id="@+id/btnRs"
            style="@style/Widget.App.Button.Outline"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Resumo" />
    </LinearLayout>

</LinearLayout>
